<!DOCTYPE html>
<html>
<head>
  <title>Devx</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <%#= javascript_importmap_tags %>
</head>

<body class="container-fluid" style="margin:0 !important;padding:0 !important;">
<%= render "layouts/header" %>
<main class="container">
  <div class="col-lg-10 mx-auto mt-5">
    <div class="card mb-5">
      <div style="display:flex !important;">
        <div class="col-lg-4">
          <%= image_tag "smiley1.png", class: "iamge-fluid ", style: "max-width:300px;" %>
        </div>
        <div class="lg-12">
          <div class="card-body">
            <h3 class="fw-bold"><%= @user.name %></h3>
            <p class="lead"><%= @user.title %></p>
            <p class="lead text-primary"><%= @user.address %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12">
          <div class="d-flex justyfy-content-start">
            <h3>About</h3>
          </div>
          <div class="col-lg-12">
            <div class="d-flex justyfy-content-start">
              <p class="lead"><%= @user.about %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>
</body>
</html>